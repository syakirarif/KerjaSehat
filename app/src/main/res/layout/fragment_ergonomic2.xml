<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ergonomic.ErgonomicActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

            <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    app:lottie_autoPlay="true"
                    android:id="@+id/ergonomic2_animation"
                    app:lottie_loop="true"
                    app:lottie_fileName="walker.json"
                    android:scaleType="centerCrop"
                    app:lottie_scale="0.1"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/ergonomic_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title_jalan_kaki"
                    android:textSize="28sp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/black"/>

            <TextView
                    android:id="@+id/ergonomic_tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/erg_rule_2"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>