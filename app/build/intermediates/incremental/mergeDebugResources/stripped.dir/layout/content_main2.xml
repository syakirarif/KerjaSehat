<?xml version="1.0" encoding="utf-8"?>

                                                      
                                                           
                                       

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_kedua" android:tag="layout/content_main2_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" tools:context=".KeduaActivity">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:text="@string/tekan_play"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:id="@+id/tv_tekan_play"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.418"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10:00"
                android:textSize="30sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:id="@+id/tv_countdown"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tv_tekan_play"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/progress_countdown"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintVertical_bias="0.333"/>

        <com.airbnb.lottie.LottieAnimationView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:lottie_autoPlay="true"
                android:id="@+id/animation_kerja"
                android:visibility="gone"
                app:lottie_fileName="onboarding_office.json"
                app:lottie_loop="true"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:id="@+id/progress_countdown"
                android:theme="@style/BlueAccent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.MaterialProgressBar.ProgressBar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
         